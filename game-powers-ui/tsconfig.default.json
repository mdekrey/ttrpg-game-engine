{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "esModuleInterop": true,
        "allowJs": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.jsx",
        "src/**/*.ts",
        "src/**/*.tsx",
        "packages/**/*.js",
        "packages/**/*.jsx",
        "packages/**/*.ts",
        "packages/**/*.tsx"
    ]
}